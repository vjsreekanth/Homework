<%- include('./partials/header') %>
<h1 class="display-5 text-center mt-2">Welcome to Bill Splitter App</h1>
    <div class='shadow-sm p-3 mt-2 mb-3'>
      <form action="/bill_splitter" method="post">
        <div class="form-group">
          <label for="amount">Amount</label>
          <div class="input-group-prepend">
             <span class="input-group-text">$</span>
             <input type="text" id="amount" name="amount" class="form-control" value="">
             
          </div>
        </div>
    
        <div class="form-group">
          <label for="tax">Taxes</label>
          <div class="input-group-prepend">
             <div class="input-group-text">%</div>
             <input type="text" id="tax" name="tax" class="form-control" value="">
          </div>
        </div>
    
        <div class="form-group">
          <label for="tip">Tips</label>
          <div class="input-group-prepend">
             <div class="input-group-text">%</div>
             <input type="text" id="tip" name="tip" class="form-control" value="">
          </div>
        </div>
    
        <div class="form-group">
          <label for="count">Number Of People</label>
          <input type="text" id="count" name="count" class="form-control" value="">
        </div>
    
        <input type="submit" value="Submit" class="btn btn-primary">
      </form>
    </div>


    <% if (splitted_Cad) { %> 
      <div class="row">
        <div class="col-md-12">
          <h1>Every person must pay: 
            <span class="label label-primary"> <%= splitted_Cad %> </span>
          </h1>
          
        </div>
      </div>
    <% } %> 
  
    

  
   
    
    
<%- include('./partials/footer') %>